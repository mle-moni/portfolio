extends ../base/layout

block content
	.container
		form(action=`/projects/create` enctype="multipart/form-data" method="post" autocomplete="off")
			h1.center-align.header.myred-text Create new project article
			div.col.s12
				include _form

				.row
					div.row
						button.btn.waves-effect.waves-light(type='submit' name='action')
							| Submit
							i.material-icons.right send
						a.waves-effect.waves-light.btn.myred(cancel href="/projects") Cancel